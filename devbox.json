{
  "packages": [
    "nodejs@latest",
    "bun@latest",
    "rye@latest",
    "sqlite@latest"
  ],
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null"
    ],
    "scripts": {
      "test": [
        "echo \"Error: no test specified\" && exit 1"
      ],
      "backend": "rye run uvicorn app:app --host 0.0.0.0 --log-level debug --reload",
      "frontend": [
        "cd front",
        "bun install",
        "npm run dev -- --host"
      ]
    }
  }
}